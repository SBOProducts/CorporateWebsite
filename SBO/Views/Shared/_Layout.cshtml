<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />

    @*Set the viewport width to device width for mobile *@
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewBag.Title - Small Business Online</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.4/themes/cupertino/jquery-ui.css" type="text/css" />
    @Styles.Render("~/Content/foundation/css")
    @Styles.Render("~/Content/sbo/css")
    
    @RenderSection("head", required: false)
</head>
<body>

    @Html.Partial("_SystemMenu")

    <div class="row">
        <div class="large-3 columns">
            <img id="Logo" onclick="javascript:location.href='@Url.Action("Index", "Home")';" src="@Url.Content("~/Images/Logo6.png")" alt="Logo" />
        </div>
        <div id="MainNav" class="large-9 columns">
            
        </div>
    </div>
        

    <div id="Content">
        @RenderBody()
    </div>


    <div  id="footer">
        <div class="row">
            <div class="large-4 medium-4 columns">
                <h5>Trailer Online</h5>
                <p>
                    Trailer Online is a website designed for Trailer & Equipment companies that 
                    want to display inventory online. 
                </p>
            </div>
            <div class="large-4  medium-4 columns">

            </div>
            <div class="large-4  medium-4 columns">
                <h5>Talk to us</h5>
                <p>
                    Email us at<br />
                    <a href="mailto:Service@SBOProducts.com">Service@SBOProducts.com</a>
                </p>
                <p>
                    Tweet us at<br />
                    <a href="https://twitter.com/SBOProducts" target="_blank">@@SBOProducts</a>
                </p>
            </div>
        </div>
    </div>
    

    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.0.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/ui/1.10.4/jquery-ui.min.js"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.12.0/jquery.validate.min.js"></script>

    
    @Scripts.Render("~/bundles/foundation")
    @Scripts.Render("~/bundles/sbo")
    <script type="text/javascript">
        $(document).foundation();
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>