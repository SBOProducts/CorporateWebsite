@model IEnumerable<UserWebsiteBO>
@{
    ViewBag.Title = "My Webistes";
}

<div class="row">
    <div class="large-12 columns">
        <h2>My Webistes</h2>
        <table style="width:100%">
            <thead>
                <tr>
                    <th>Website Name</th>
                    <th>Type</th>
                    <th>Created</th>
                    <th>Roles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserWebsiteBO site in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(site.SiteName, "Index", "Home", new { area = "TrailerOnline", SiteName = site.SiteName }, null)</td>
                        <td>@site.Type</td>
                        <td>@site.Created.ToShortDateString()</td>
                        <td>@site.Roles</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="large-4 columns">
        @Html.ActionLink("Create Website", "CreateWebsite", "Website", null, new { @class = "button radius success" })
    </div>
</div>